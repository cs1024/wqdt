<view class="container">
  <view class="answer" wx:if="{{array.length>0}}">

    <view class="title">{{lists.title}}
      <text class="red" wx:if='{{lists.correct.length>1}}'>[多选]</text>
      <text class="red" wx:else>[单选]</text>
    </view>
    <view class="weui-cells weui-cells_after-title">

      <checkbox-group bindchange="checkboxChange" wx:if='{{lists.correct.length>1}}'>
        <label class="weui-cell weui-check__label" wx:for="{{radioItems}}" wx:key="value">
          <checkbox class="weui-check" value="{{item.value}}" checked="{{item.checked}}" />

          <view class="weui-cell__hd weui-check__hd_in-checkbox">
            <icon class="weui-icon-checkbox_circle" type="circle" size="23" wx:if="{{!item.checked}}"></icon>
            <icon class="weui-icon-checkbox_success" type="success" size="23" wx:if="{{item.checked}}"></icon>
          </view>
          <view class="weui-cell__bd">{{item.name}}</view>
        </label>
      </checkbox-group>

      <radio-group bindchange="radioChange" wx:else>
        <label class="weui-cell weui-check__label" wx:for="{{radioItems}}" wx:key="value">
          <radio class="weui-check" value="{{item.value}}" checked="{{item.checked}}" />
          <view class="weui-cell__hd weui-check__hd_in-checkbox">
            <icon class="weui-icon-checkbox_circle" type="circle" size="23" wx:if="{{!item.checked}}"></icon>
            <icon class="weui-icon-checkbox_success" type="success" size="23" wx:if="{{item.checked}}"></icon>
          </view>
          <view class="weui-cell__bd">{{item.name}}</view>
        </label>
      </radio-group>

    </view>

    <view class="page">
      <view class="prev" bindtap='prev'></view>
      <view class="next" bindtap='next'></view>
    </view>

    <view class="number">
      <text>{{count+1}}</text>
      <text>/</text>
      <text>{{array.length}}</text>
    </view>

  </view>
</view>